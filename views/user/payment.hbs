            <li class="list-item"><a href="/user/history-management/{{current}}">Lịch sử được quản lí</a></li>
            <li class="list-item"><a href="/user/change-password">Đổi mật khẩu</a></li>
        </ul>
    </div>
    <div class="wrap-right">
        <div class="wrap-top">
            <div class="so-du">
                <h4>Số dư: <span>{{soDu}} vnd</span></h4>
            </div>
            <div class="nap-tien">
                <button class="button-36" role="button" onclick="napTien('{{current}}')">Nạp tiền vào tài khoản</button>
            </div>
        </div>
        <br>
        <div class="wrap-bottom">     
            <h3>Lịch sử thanh toán:</h3>       
            {{#each lichSu as |item|}}            
                <div class="lichsu-item" style="margin: 20px; border-bottom: 1px solid #000;">
                    <h4>Mã thanh toán: <span>{{item.MaTKTT}}</span></h4>
                    <h4>Số tiền thanh toán: <span>{{item.SoTien}}</span></h4>
                    <h4>Thời gian: <span>{{item.ThoiGian}}</span></h4>
                </div>
            {{/each}}
        </div>
    </div>
    
</div>
