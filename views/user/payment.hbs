    }
    .wrap-left .list .active {
        color: #fff;
        font-weight: 900;
    }
    .wrap-left .list li:hover {
        color: blue;
        transform: translateX(-4px);
    }
    .wrap-right {
        padding: 20px;
        margin-left: 50px;
        margin-top: 20px;
        border: 2px solid #ccc;
        border-radius: 8px;
        flex: 1;
    }
    .wrap-right .form-info {
        padding-left: 50px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    .wrap-right .form-info .form-group {
        font-size: 20px;
    }
    .wrap-right .form-info .form-group label {
        font-weight: 600;
        color: #333;
    }
    .wrap-right .form-info .form-group input {
        padding:0 12px;
        display: inline-block;
        width: 100px !important;
        overflow: visible;
        min-width: fit-content;
    }
</style>
<div class="wrap">
